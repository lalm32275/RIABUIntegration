<apex:page controller="RiabuAccountVFController">
        <style>
        .custom-msg-box {
            background-color: #f4f6f9;
            border-left: 5px solid #0070d2;
            padding: 16px 20px;
            margin: 20px 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            border-radius: 6px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            color: #333;
        }
        .custom-msg-box p {
            margin: 0;
            font-size: 15px;
        }
    </style>

      <apex:form >
        <apex:pageMessages />
         <apex:actionFunction name="autoInsertAccounts" 
                             action="{!insertAccounts}" 
                             rerender="msgPanel"
                             oncomplete="runBatchNow();"/>
        
        <apex:actionFunction name="autoInsertOthers" 
                             action="{!insertOthers}" 
                             rerender="msgPanel"
                            oncomplete="runOrderChatterBatchNow();"/>
       
       <apex:actionFunction name="autoInsertOrdersAndChatters" 
                             action="{!insertOrdersAndChatters}" 
                             rerender="msgPanel"/>
       
        <apex:outputPanel id="msgPanel">
            <div class="custom-msg-box">
                <p><apex:outputText value="{!message}" /></p>
                
            </div>
        </apex:outputPanel>
    </apex:form>
     <script>
        window.onload = function() {
            autoInsertAccounts(); // Automatically call insertAccounts()
            
        };
    function runBatchNow() {
        setTimeout(function() {
            autoInsertOthers(); 
        }, 1000); // wait for insert to complete
    }
    function runOrderChatterBatchNow() {
        setTimeout(function() {
            autoInsertOrdersAndChatters(); 
        }, 500); // wait for insert to complete
    }
    setTimeout(function() {
        if (sforce && sforce.one) {
            // Proper Lightning redirect
            sforce.one.navigateToURL('/lightning/o/Account/list');
        } else {
            // Fallback to classic
            window.location.href = '/lightning/o/Account/list';
        }
    }, 70000);
    </script> 
</apex:page>